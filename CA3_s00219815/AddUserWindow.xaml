<Window x:Class="workwise_app.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="Images\favicon.png"
        Title="Add User" Height="350" Width="350">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" Margin="5">
            <Label Content="First Name" Margin="5"/>
            <TextBox x:Name="txtFirstName" Width="200" Margin="5"/>
            <Label Content="Last Name" Margin="5"/>
            <TextBox x:Name="txtLastName" Width="200" Margin="5"/>
            <Label Content="Email" Margin="5"/>
            <TextBox x:Name="txtEmail" Width="200" Margin="5"/>
            <Button Name="btnSaveUser" Width="120" Height="30" Click="btnSaveUser_Click"  Margin="0,15,0,15" Tag="PlusSolid" Background="#FF5F5CFD" >
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Save" Width="16" Height="16" Margin="0,0,5,0" Foreground="White" />
                    <TextBlock Text="Save user" Foreground="White" FontWeight="Medium"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>

